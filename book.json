{
    "title": "Exploring Microservices — Game On!",
    "description": "Game On! is a text-based adventure game designed to allow experimentation with microservices and supporting technologies.",

    "gitbook": ">=3.2.0",

    "plugins": [
        "addcssjs",
        "github",
        "heading-anchors",
        "include",
        "meta",
        "sitemap",
        "youtube",
        "ga",
        "-fontsettings",
        "-sharing"
    ],
    "structure": {
        "readme": "README.adoc"
    },
    "pluginsConfig": {
        "addcssjs": {
            "css": [
                "styles/asciidoctor-custom.css",
                "styles/gameontext.css"
            ]
        },
        "github": {
            "url": "https://github.com/gameontext"
        },
        "ga": {
          "token": "UA-90113653-4",
          "configuration": "auto"
        },
        "meta": {
            "data": [
                {
                    "name": "keywords",
                    "content": "cloud native applications, microservices, Java EE, microservice architecture"
                }
            ]
        },
        "sitemap": {
            "hostname": "http://book.gameontext.org/"
        }
    }
}
